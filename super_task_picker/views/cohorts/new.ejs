<%- include('../partials/header.ejs') %>
<div class="container">
  <form action="/cohorts" method="POST">
    <div class="form-group">
      <label for="logoUrl">Logo URL</label>
      <input
        type="text"
        class="form-control"
        name="logoUrl"
        placeholder="http://www.someexample.com/some.png"
      />
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        name="name"
        placeholder="Flying Funks"
      />
    </div>
    <div class="form-group">
      <label for="members">Members</label>
      <textarea
        name="members"
        class="form-control"
        rows="3"
        placeholder="Jon Snow, Daenerys, Melisandre, Arya Stark"
      ></textarea>
    </div>
    <input type="submit" class="btn btn-outline-success" value="Submit" />
  </form>
</div>
<%- include('../partials/footer.ejs') %>
